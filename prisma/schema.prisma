generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int           @id @default(autoincrement())
  name                  String
  email                 String
  type                  USER_TYPE
  birthDay              DateTime?
  signatureImage        String?
  logo                  String?
  address               String?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  deleted               Boolean       @default(false)
  UserTherapyPatient    UserTherapy[] @relation("PatientRelation")
  UserTherapyApplicator UserTherapy[] @relation("ApplicatorRelation")
  UserTherapyTutor      UserTherapy[] @relation("TutorRelation")
  UserOwner             UserTherapy[] @relation("OwnerRelation")
}

model Therapy {
  id             Int      @id @default(autoincrement())
  name           String?
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deleted        Boolean  @default(false)
  UserTherapy    UserTherapy[] @relation("TherapyRelation")
}

model UserTherapy {
  id           Int      @id @default(autoincrement())
  therapyId    Int
  patientId    Int
  applicatorId Int
  tutorId      Int
  ownerId      Int

  therapy      Therapy  @relation("TherapyRelation", fields: [therapyId], references: [id])
  patient      User     @relation("PatientRelation", fields: [patientId], references: [id])
  applicator   User     @relation("ApplicatorRelation", fields: [applicatorId], references: [id])
  tutor        User     @relation("TutorRelation", fields: [tutorId], references: [id])
  owner        User     @relation("OwnerRelation", fields: [ownerId], references: [id])
  
  therapyDate  DateTime
  startDate    DateTime
  endDate      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deleted      Boolean  @default(false)

  @@unique([patientId, applicatorId, tutorId, therapyId, therapyDate])
}

enum USER_TYPE {
  PHYSICAL_PERSON
  COMPANY
  PATIENT
  TUTOR
  APPLICATOR
  ADMIN
}
